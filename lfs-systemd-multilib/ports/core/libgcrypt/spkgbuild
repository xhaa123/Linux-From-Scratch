# description	: A general purpose crypto library based on the code used in GnuPG
# depends	: libgpg-error

name=libgcrypt
version=1.9.2
release=1

source="https://gnupg.org/ftp/gcrypt/$name/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure --prefix=/usr

	make

	make -C doc html
	makeinfo --html --no-split -o doc/gcrypt_nochunks.html doc/gcrypt.texi
	makeinfo --plaintext       -o doc/gcrypt.txt           doc/gcrypt.texi

	make DESTDIR=$PKG install

	install -v -dm755   $PKG/usr/share/doc/$name-$version
	install -v -m644    README doc/{README.apichanges,fips*,libgcrypt*} \
	                    $PKG/usr/share/doc/$name-$version

	install -v -dm755   $PKG/usr/share/doc/$name-$version/html
	install -v -m644 doc/gcrypt.html/* \
	                    $PKG/usr/share/doc/$name-$version/html
	install -v -m644 doc/gcrypt_nochunks.html \
	                    $PKG/usr/share/doc/$name-$version
	install -v -m644 doc/gcrypt.{txt,texi} \
	                    $PKG/usr/share/doc/$name-$version
}
